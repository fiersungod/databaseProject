@page
@model databaseProject.Pages.IndexModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Food Market - Home</title>
    <style>
        /* Set the background image for the entire page */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-image: url('/images/IndexFood.jpg'); /* Use a single background image */
            background-size: cover; /* Cover the entire screen */
            background-position: center; /* Center the image */
            background-attachment: fixed; /* Make the background fixed as you scroll */
            transition: margin-left 0.3s ease; /* Smooth transition when the sidebar slides out */
        }

        /* Styling for the header */
        header {
            background-color: rgba(255, 99, 71, 0.8); /* Slight transparency */
            color: white;
            padding: 30px;
            text-align: center;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Light shadow */
            position: relative;
        }

        header h1 {
            font-size: 50px;
            margin: 0;
            font-weight: bold;
        }

        /* Sidebar - This will be a vertical menu on the left side of the page */
        .sidebar {
            position: fixed;
            top: 0;
            left: -250px; /* Initially hide it off-screen */
            width: 250px;
            height: 100%;
            background-color: rgba(255, 255, 255, 0.9);
            box-shadow: 4px 0 8px rgba(0, 0, 0, 0.1);
            transition: left 0.3s ease; /* Smooth slide-in effect */
            z-index: 1000; /* Ensure the sidebar is always on top */
        }

        /* Sidebar links */
        .sidebar a {
            display: block;
            padding: 15px 20px;
            color: #333;
            text-decoration: none;
            font-size: 18px;
            border-bottom: 1px solid #ddd;
        }

        .sidebar a:hover {
            background-color: #f4f4f4;
        }

        /* Show the sidebar when hovering over the left edge of the page */
        body:hover .sidebar {
            left: 0; /* Slide it in from the left */
        }

        /* Ensure the sidebar appears only when the mouse is near the left edge of the screen */
        body {
            overflow-x: hidden; /* Prevent horizontal scroll */
        }

        /* Sidebar hover effect - Only show when close to the left edge */
        body:hover .sidebar {
            left: 0; /* Show sidebar when hovering left edge */
        }

        /* Header adjustment to ensure no overlap */
        header {
            z-index: 1; /* Make sure the header stays above the sidebar */
        }

        /* Navigation Bar styling */
        .nav {
            display: flex;
            justify-content: flex-end; /* Align menu to the right */
            padding: 10px 20px;
            background-color: rgba(255, 255, 255, 0.8); /* Slight transparency */
            font-size: 18px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Light shadow */
        }

        .nav a {
            margin: 0 20px;
            text-decoration: none;
            color: #555;
            font-weight: bold;
            position: relative;
            padding: 5px 0;
        }

        .nav a:hover {
            color: #ff6347; /* Change text color */
            text-decoration: underline;
        }

        /* Hero section style */
        .hero {
            text-align: center;
            padding: 100px 20px;
            color: white;
            background-position: center;
        }

        .hero h1 {
            font-size: 60px;
            margin-bottom: 20px;
            text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.5); /* Text shadow */
        }

        .hero p {
            font-size: 24px;
        }

        /* Shop Button - Right Side */
        .shop-button {
            position: absolute;
            top: 50%;
            right: 20px;
            transform: translateY(-50%);
            font-size: 50px;
            color: white;
            background-color: rgba(255, 99, 71, 0.7);
            padding: 20px 40px;
            border-radius: 10px;
            font-weight: bold;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .shop-button:hover {
            background-color: rgba(255, 99, 71, 1); /* On hover, full opacity */
        }

        /* Hover area on the left side */
        .hover-area {
            position: absolute;
            top: 0;
            left: 0;
            width: 20px; /* The width of the hover area */
            height: 100%;
            cursor: pointer; /* Show pointer cursor to indicate hoverable area */
        }

    </style>
</head>
<body>
    <!-- Sidebar Menu on the Left -->
    <div class="sidebar">
        @if (databaseProject.User.MemberType == string.Empty)
        {
            <a href="/Login?">Login</a>
            <a href="/CreateAccount?">Register</a>
        }
        @if (databaseProject.User.MemberType == "Member")
        {
            <a href="/Cart?">Cart</a>
            <a href="/Explore?">Shop</a>
            <a href="/MemberOrders?memberId=@databaseProject.User.UserId">Member Orders</a>
        }
        @if (databaseProject.User.MemberType == "Business")
        {
            <a href="/Cart?">Cart</a>
            <a href="/Explore?">Shop</a>
            <a href="/BusinessOrders?memberId=@databaseProject.User.UserId">Transactions</a>
        }
    </div>

    <!-- Invisible Hover Area on the Left -->
    <div class="hover-area"></div>

    <header>
        <h1>Welcome to Your Market</h1>
    </header>

    <!-- Hero Section -->
    <div class="hero">
        <h1>Explore</h1>
        <p>Discover our wide variety of products</p>
    </div>

</body>
</html>



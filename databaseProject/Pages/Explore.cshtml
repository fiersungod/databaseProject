@page
@model databaseProject.Pages.ExploreModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Explore Stores</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #ffffff;
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #ff4d4d;
            padding: 1em;
            color: white;
            text-align: center;
        }

        /* Style for the Main Menu link */
        nav ul {
            list-style-type: none;
            padding: 0;
            margin-top: 20px; /* Add some space between the header and the navigation link */
        }

        nav ul li {
            display: inline;
        }

        nav ul li a {
            color: white;
            text-decoration: none;
            font-weight: bold;
            font-size: 1.5em; /* Increase the font size */
            padding: 10px 20px;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        /* Hover effect for the Main Menu link */
        nav ul li a:hover {
            background-color: #e60000; /* Darker red */
        }

        main {
            padding: 2em;
            max-height: calc(100vh - 200px);
            overflow-y: auto;
        }

        h1 {
            font-size: large;
            text-align: center;
            color: #ff4d4d;
        }

        .shop-container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
            margin-top: 40px; /* Add space between the header and shop cards */
        }

        .shop-card {
            background-color: #f9f9f9;
            padding: 15px;
            width: 250px;
            text-align: center;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .shop-card img {
            width: 100%;
            height: auto;
            border-radius: 8px;
        }

        .shop-card h3 {
            font-size: 1.2em;
            color: #333;
        }

        .shop-card p {
            color: #777;
        }

        .shop-card a {
            display: inline-block;
            margin-top: 10px;
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            text-decoration: none;
            border-radius: 5px;
        }

        .shop-card a:hover {
            background-color: #0056b3;
        }

        .no-stores {
            font-size: 1.2em;
            color: #ff4d4d;
            text-align: center;
        }
    </style>
</head>
<body>

    <!-- Main Content -->
    <header>
        <h1>Explore Our Stores</h1>
        <nav>
            <ul>
                <li><a href="/Index">Main Menu</a></li>
            </ul>
        </nav>
    </header>

    <div>
        @if (Model.Shops.Count == 0)
        {
            <p class="no-stores">There are no stores available at the moment.</p>
        }

        @if (Model.Shops != null && Model.Shops.Count > 0)
        {
            <div class="shop-container">
                @foreach (var shop in Model.Shops)
                {
                    <div class="shop-card">
                        <img src="~/images/@shop.Image" alt="@shop.Describition" />
                        <h3>@shop.Describition</h3>
                        <p>@shop.Location</p>
                        <p><strong>Business Hours:</strong> @shop.Business_Time</p>
                        <a href="#">View Details</a>
                    </div>
                }
            </div>
        }
        else
        {
            <p>No shops available at the moment.</p>
        }
    </div>

</body>
</html>

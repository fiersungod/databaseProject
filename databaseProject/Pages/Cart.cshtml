@page
@model databaseProject.Pages.CartModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Cart</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #ffffff;
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #ff4d4d;
            padding: 1em;
            color: white;
            text-align: center;
        }

        main {
            padding: 2em;
            max-height: calc(100vh - 200px);
            overflow-y: auto;
        }

        h1 {
            text-align: center;
            color: #ff4d4d;
        }

        .cart-container {
            display: flex;
            justify-content: space-between;
            padding: 20px;
            gap: 20px;
        }

        .cart-table {
            width: 60%;
            border-collapse: collapse;
            border: 1px solid #ddd;
        }

        .cart-table th, .cart-table td {
            padding: 10px;
            text-align: center;
        }

        .cart-table th {
            background-color: #f1f1f1;
        }

        .cart-table td {
            background-color: #fafafa;
        }

        .cart-summary {
            width: 30%;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            background-color: #f9f9f9;
        }

        .cart-summary h3 {
            text-align: center;
            color: #ff4d4d;
        }

        .cart-actions {
            text-align: center;
            margin-top: 20px;
        }

        .btn {
            padding: 10px 20px;
            font-size: 1em;
            border-radius: 5px;
            text-decoration: none;
            display: inline-block;
            margin-top: 10px;
        }

        .btn-back {
            background-color: #ff4d4d;
            color: white;
        }

        .btn-back:hover {
            background-color: #e60000;
        }

        .btn-checkout {
            background-color: #007bff;
            color: white;
        }

        .btn-checkout:hover {
            background-color: #0056b3;
        }

        .empty-cart-message {
            text-align: center;
            font-size: 1.2em;
            color: #ff4d4d;
        }
    </style>
</head>
<body>

    <!-- Main Content -->
    <header>
        <h1>Your Cart</h1>
    </header>

    <main>
        @if (Model.CartItems != null && Model.CartItems.Count > 0)
        {
            <div class="cart-container">
                <!-- Cart Items Table -->
                <div class="cart-table-container">
                    <table class="cart-table">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.CartItems)
                            {
                                <tr>
                                    <td>@item.Product</td>
                                    <td>@item.Price</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.Total</td>
                                    <td><button>cancel</button></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Cart Summary Section -->
                <div class="cart-summary">
                    <h3>Cart Summary</h3>
                    <p><strong>Total:</strong> @Model.TotalPrice.ToString("C")</p>
                    <div class="cart-actions">
                        <a href="/Explore" class="btn btn-back">Back to Explore</a>
                        <button class="btn btn-checkout">Proceed to Checkout</button>
                    </div>
                </div>
            </div>
        }
        else
        {
            <p class="empty-cart-message">Your cart is empty.</p>
        }
    </main>

</body>
</html>

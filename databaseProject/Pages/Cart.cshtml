@page
@model databaseProject.Pages.CartModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Cart</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #ffffff;
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #ff4d4d;
            padding: 1em;
            color: white;
            text-align: center;
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        main {
            padding: 2em;
            display: flex;
            justify-content: flex-end;
        }

        .cart-container {
            width: 70%;
            display: flex;
            justify-content: flex-end;
            gap: 20px;
        }

        .cart-table {
            width: 65%;
            border-collapse: collapse;
            border: 1px solid #ddd;
            background-color: #f9f9f9;
        }

        .cart-table th, .cart-table td {
            padding: 10px;
            text-align: center;
        }

        .cart-table th {
            background-color: #f1f1f1;
        }

        .cart-summary {
            width: 30%;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            background-color: #fff;
        }

        .cart-summary h3 {
            text-align: center;
            color: #ff4d4d;
        }

        .btn {
            padding: 10px 20px;
            font-size: 1em;
            border-radius: 5px;
            text-decoration: none;
            display: inline-block;
        }

        .btn-back {
            background-color: #ff4d4d;
            color: white;
        }

        .btn-back:hover {
            background-color: #e60000;
        }

        .btn-checkout {
            background-color: #007bff;
            color: white;
        }

        .btn-checkout:hover {
            background-color: #0056b3;
        }

        .empty-cart-message {
            text-align: center;
            font-size: 1.2em;
            color: #ff4d4d;
        }
        .sidebar {
            position: fixed;
            top: 0;
            left: -250px;
            width: 250px;
            height: 100%;
            background-color: #ffffff;
            box-shadow: 4px 0 8px rgba(0, 0, 0, 0.1);
            transition: left 0.3s ease;
            z-index: 1000;
        }

        .sidebar a {
            display: block;
            padding: 15px 20px;
            color: #333;
            text-decoration: none;
            font-size: 18px;
            border-bottom: 1px solid #ddd;
        }

        .sidebar a:hover {
            background-color: #f4f4f4;
        }

        body:hover .sidebar {
            left: 0;
        }

        .hover-area {
            position: absolute;
            top: 0;
            left: 0;
            width: 20px;
            height: 100%;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <!-- Main Content -->
    <header>
        <h1>Your Cart</h1>
    </header>
    
    <!-- Sidebar -->
    <div class="sidebar">
        @if (databaseProject.User.MemberType == string.Empty)
        {
            <a href="/Login?">Login</a>
            <a href="/CreateAccount?">Register</a>
        }
        @if (databaseProject.User.MemberType == "Member")
        {
            <a href="/Cart?">Shopping Cart</a>
            <a href="/Explore?">Shop</a>
            <a href="/Index">Main Menu</a>
        }
        @if (databaseProject.User.MemberType == "Business")
        {
            <a href="/Cart?">Shopping Cart</a>
            <a href="/Explore?">Shop</a>
            <a href="/Index">Main Menu</a>
        }
    </div>

    <div class="hover-area"></div>
    <main>
        @if (Model.CartItems != null && Model.CartItems.Count > 0)
        {
            <div class="cart-container">
                <!-- Cart Items Table -->
                <div>
                    <table class="cart-table">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.CartItems)
                            {
                                <tr>
                                    <td>@item.Product</td>
                                    <td>@item.Price</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.Total</td>
                                    <td>
                                        <form method="post" asp-page-handler="Remove">
                                            <input type="hidden" name="itemId" value="@item.Id" />
                                            <button type="submit" class="btn btn-back">Cancel</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Cart Summary Section -->
                <div class="cart-summary">
                    <h3>Cart Summary</h3>
                    <p><strong>Total:</strong> @Model.TotalPrice.ToString("C")</p>
                    <div>
                        <button class="btn btn-checkout">Proceed to Checkout</button>
                    </div>
                </div>
            </div>
        }
        else
        {
            <p class="empty-cart-message">Your cart is empty.</p>
        }
    </main>
</body>
</html>


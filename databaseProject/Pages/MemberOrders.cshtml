@page
@model databaseProject.Pages.MemberOrdersModel
@{
    ViewData["Title"] = "MemberOrders";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f8f9fa;
        }

        .container {
            max-width: 800px;
            margin: 50px auto;
            padding: 20px;
            background: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        h2 {
            font-size: 24px;
            margin-bottom: 20px;
            color: #343a40;
        }
        .explore-link {
            position: absolute;
            left: 20px;
            top: 10%;
            transform: translateY(-50%);
            background-color: white;
            color: #ff4d4d;
            text-decoration: none;
            padding: 10px 20px;
            border-radius: 6px;
            font-size: 1em;
            font-weight: bold;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        .explore-link:hover {
            background-color: #ff4d4d;
            color: white;
        }

        .alert {
            padding: 15px;
            margin-bottom: 20px;
            border: 1px solid transparent;
            border-radius: 4px;
        }

        .alert-info {
            color: #0c5460;
            background-color: #d1ecf1;
            border-color: #bee5eb;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            text-align: left;
            padding: 12px;
            border: 1px solid #dee2e6;
        }

        th {
            background-color: #343a40;
            color: #ffffff;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #e9ecef;
        }

        .order_card p{
            text-indent: 30px;
        }

        .footer {
            text-align: center;
            margin-top: 30px;
            font-size: 14px;
            color: #6c757d;
        }
    </style>
</head>
<body>

        <header>
        <a href="/Explore" class="explore-link">‚Üê Explore</a>
        </header>

    <div class="container">
        <h2>Member Orders</h2>

        @if (Model.Orders.Count == 0)
        {
            <div class="alert alert-info" role="alert">
                There are no purchases.
            </div>
        }
        else
        {
            <div>
                @foreach (var order in Model.Orders)
                {
                    <div>
                    <h3>OrderTime: @order.OrderTime</h3>
                    <h4>States: @order.OrderStates</h4>
                        @foreach (var InOrder in order.InOrders)
                        {
                            <p>@InOrder.ProductName x @InOrder.Amount $ @InOrder.Price</p>
                        }
                    </div>
                }
            </div>
        }
    </div>

    <div class="footer">
        &copy; @DateTime.Now.Year TaipeiTech databaseProject.
    </div>
</body>
</html>

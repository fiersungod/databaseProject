@page
@model databaseProject.Pages.databaseTestModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0;" />
    <title>Main Menu</title>
    <style>
        /*CSS Code*/
    </style>
</head>
<body>
    <h2>User Management</h2>

    <!-- 顯示使用者列表 -->
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- 新增使用者 -->
    <h3>Add New User</h3>
    <form method="post" asp-page-handler="AddUser">
        <div class="form-group">
            <label for="Name">Name:</label>
            <input type="text" id="Name" name="NewUser.Name" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="Email">Email:</label>
            <input type="email" id="Email" name="NewUser.Email" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary">Add User</button>
    </form>

    <!-- 執行 SQL 檔案 -->
    <h3>Execute SQL File</h3>
    <form method="post" asp-page-handler="ExecuteSql">
        <button type="submit" class="btn btn-danger">Run SQL File</button>
    </form>
</body>
</html>